{
  "version": 1,
  "patterns": [
    {
      "id": "xss-script-tag",
      "name": "Script tag injection",
      "description": "Detects <script> tags with any attributes and content",
      "pattern": "<script\\b[^>]*>([\\s\\S]*?)<\\/script>",
      "flags": "gim",
      "severity": "high",
      "category": "xss",
      "flagGroup": "hasXSS",
      "scope": "general",
      "detection": { "mode": "simple" },
      "enabled": true,
      "source": "original",
      "cveRefs": [],
      "dateAdded": "2025-01-01",
      "whitelistedDomains": []
    },
    {
      "id": "xss-event-handler-double-quote",
      "name": "Inline event handler (double-quoted)",
      "description": "Detects on* event attributes with double-quoted values",
      "pattern": "on\\w+\\s*=\\s*\"[^\"]*\"",
      "flags": "gim",
      "severity": "high",
      "category": "xss",
      "flagGroup": "hasXSS",
      "scope": "general",
      "detection": { "mode": "simple" },
      "enabled": true,
      "source": "original",
      "cveRefs": [],
      "dateAdded": "2025-01-01",
      "whitelistedDomains": []
    },
    {
      "id": "xss-event-handler-single-quote",
      "name": "Inline event handler (single-quoted)",
