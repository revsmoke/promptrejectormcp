{
  "version": 1,
  "patterns": [
    {
      "id": "sqli-keyword-pairs",
      "name": "SQL keyword pairs",
      "description": "Detects SQL statement keyword pairs like SELECT...FROM, INSERT...INTO",
      "pattern": "\\b(SELECT|INSERT|UPDATE|DELETE|DROP|UNION|ALTER|CREATE|TRUNCATE)\\s+(FROM|INTO|TABLE|DISTINCT)\\b",
      "flags": "gim",
      "severity": "critical",
      "category": "sqli",
      "flagGroup": "hasSQLi",
      "scope": "general",
      "detection": { "mode": "simple" },
      "enabled": true,
      "source": "original",
      "cveRefs": [],
      "dateAdded": "2025-01-01",
      "whitelistedDomains": []
    },
    {
      "id": "sqli-comment-injection",
      "name": "SQL comment injection",
      "description": "Detects SQL comment sequences after quotes/semicolons",
      "pattern": "['\";]--",
      "flags": "g",
      "severity": "critical",
      "category": "sqli",
      "flagGroup": "hasSQLi",
      "scope": "general",
      "detection": { "mode": "simple" },
      "enabled": true,
      "source": "original",
      "cveRefs": [],
      "dateAdded": "2025-01-01",
      "whitelistedDomains": []
    },
    {
      "id": "sqli-tautology",
      "name": "SQL tautology (OR 1=1)",
      "description": "Classic OR 1=1 injection after quote/semicolon",
      "pattern": "['\";]\\s+OR\\s+['\"]?1['\"]?\\s*=\\s*['\"]?1['\"]?",
      "flags": "gim",
      "severity": "critical",
      "category": "sqli",
      "flagGroup": "hasSQLi",
      "scope": "general",
      "detection": { "mode": "simple" },
      "enabled": true,
      "source": "original",
      "cveRefs": [],
      "dateAdded": "2025-01-01",
      "whitelistedDomains": []
    },
    {
      "id": "sqli-version-probe",
      "name": "SQL Server version probe",
      "description": "Detects @@VERSION enumeration attempts",
      "pattern": "@@VERSION",
      "flags": "gim",
      "severity": "critical",
      "category": "sqli",
      "flagGroup": "hasSQLi",
      "scope": "general",
      "detection": { "mode": "simple" },
      "enabled": true,
      "source": "original",
      "cveRefs": [],
      "dateAdded": "2025-01-01",
      "whitelistedDomains": []
    },
    {
      "id": "sqli-schema-enumeration",
      "name": "Schema enumeration",
      "description": "Detects INFORMATION_SCHEMA access attempts",
      "pattern": "INFORMATION_SCHEMA",
      "flags": "gim",
      "severity": "critical",
      "category": "sqli",
      "flagGroup": "hasSQLi",
      "scope": "general",
      "detection": { "mode": "simple" },
      "enabled": true,
      "source": "original",
